<view class="container">

  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
   
  </view>
  
  <view class="separate"></view>

  <view class="line"></view>

  <view class="person-list">
    <view class="list-item">
      <image class="item-image" src="../../../images/bottomNav/mine.png"></image>
      <text class="item-text" bindtap='serve'>查看接收订单</text>
    </view>
 
    <view class="person-line"></view>
    <view class="list-item">
      <image class="item-image" src="../../../images/bottomNav/mine.png"></image>
      <text class="item-text" bindtap='order'>全部订单</text>
    </view>
   
     <view class="list-item">
      <image class="item-image" src="../../../images/bottomNav/mine.png"></image>
      <text class="item-text" bindtap='recharge'>充值服务</text>
    </view>
   <view class="list-item">
      <image class="item-image" src="../../../images/bottomNav/mine.png"></image>
      <text class="item-text">我的余额￥{{myprice}}</text>
    </view>
    
  </view>
  <view class="separate"></view>
</view>


